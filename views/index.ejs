<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Image App</title>
</head>
<body>

  <h1 style="text-align:center; ">Image Uploader 3000</h1>

  <div style ="display:flex; justify-content:center; margin: 30px">
    <!-- create a form to upload an image jpeg with a description -->
    <form action="/saveImage" method="post" enctype="multipart/form-data">
      <input type="file" name="image" accept="image/*">
      <input type="text" name="description" placeholder="Description">
      <button type="submit" name="submit">UPLOAD</button>
    </form>
  </div>

  <% images.forEach(image => { %>
    <li style = "list-style:none; display:grid; justify-content:center;">
      <img src="<%= image.imageURL %>" alt="<%= image.description %>" style = "margin: 10px" />
      <p style = "text-align:center;"><%= image.description %></p>
      <form action = "/image/delete/<%= image.id %>/<%= image.file_path %>" method = "POST" style = "text-align:center;">
        <button type = "submit"  >Delete Image</button>
      </form>
    </li>
  <% }) %>


</body>
</html>